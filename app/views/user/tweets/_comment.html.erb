<div>
  <div style="display: flex; flex-direction: column; border-bottom-style: double; border-bottom-width: 2px;">
    <div style="display: flex; align-items: center; justify-content: space-between;">
      <div style="display: flex; align-items: center;">
        <% @tweet.comments.each do |comment| %>
          <%= image_tag @user.get_profile_image(50,50), style: "border-radius: 50%; width: 50px; height: 50px;" %>
          <div class="ml-3"><%= @user.username %></div>
          <div class="ml-3"><%= comment.comment %></div>
          <%= comment.created_at.strftime('%Y/%m/%d') %>
          <% if comment.user == current_user %>
            <%= link_to "削除", tweet_comment_path(comment.tweet,comment), method: :delete %>
          <% end %>
        <% end %>
      </div>
    </div> 
  </div>
</div>